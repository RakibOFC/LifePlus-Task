<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:theme="@style/Base.Theme.LifePlusTask"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_20sdp"
    app:strokeColor="#00000000">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivShowImage"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_120sdp"
            android:adjustViewBounds="true"
            android:background="@color/loading_effect"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/movieImageView" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvShowName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@color/loading_effect"
                android:paddingStart="@dimen/_3sdp"
                android:paddingEnd="@dimen/_3sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvShowLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@color/loading_effect"
                android:paddingStart="@dimen/_3sdp"
                android:paddingEnd="@dimen/_3sdp" />

            <TextView
                android:id="@+id/tvShowGenres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@color/loading_effect"
                android:paddingStart="@dimen/_3sdp"
                android:paddingEnd="@dimen/_3sdp" />

            <!--<TextView
                android:id="@+id/show_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ended" />-->

            <TextView
                android:id="@+id/tvShowRuntime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@color/loading_effect"
                android:paddingStart="@dimen/_3sdp"
                android:paddingEnd="@dimen/_3sdp" />

            <TextView
                android:id="@+id/tvShowRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@color/loading_effect"
                android:paddingStart="@dimen/_3sdp"
                android:paddingEnd="@dimen/_3sdp" />

            <TextView
                android:id="@+id/tvShowSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@color/loading_effect"
                android:paddingStart="@dimen/_3sdp"
                android:paddingEnd="@dimen/_3sdp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>